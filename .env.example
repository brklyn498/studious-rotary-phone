# ===========================
# UzAgro Platform Environment Variables
# ===========================
# Copy this file to .env and fill in your values

# ===========================
# Django Backend
# ===========================
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (for production - SQLite used in development)
DATABASE_URL=postgres://user:password@localhost:5432/uzagro

# Redis (for production - not used in development)
REDIS_URL=redis://localhost:6379/0

# ===========================
# Integrations (Mock in development)
# ===========================

# Soliq.uz Tax Verification
SOLIQ_API_KEY=mock-soliq-api-key

# Payme Payment Gateway
PAYME_MERCHANT_ID=mock-payme-merchant
PAYME_SECRET_KEY=mock-payme-secret

# Click Payment Gateway
CLICK_MERCHANT_ID=mock-click-merchant
CLICK_SERVICE_ID=mock-click-service
CLICK_SECRET_KEY=mock-click-secret

# Logistics
BTS_API_KEY=mock-bts-api-key

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# ===========================
# Next.js Frontend
# ===========================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ===========================
# MeiliSearch (for production)
# ===========================
MEILI_MASTER_KEY=mock-meili-key
MEILISEARCH_URL=http://localhost:7700
